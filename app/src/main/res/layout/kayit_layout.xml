<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/login_background"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvUyari"
        android:text=""
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:ems="10"
        android:textSize="40dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Ad Soyad"
        android:ems="10"
        android:id="@+id/etAdSoyadKayit"
        android:layout_gravity="center_horizontal"
        android:background="#4d0e0d0d"
        android:textSize="40dp"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_margin="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="E-mail.."
        android:ems="10"
        android:id="@+id/etEmailKayit"
        android:layout_gravity="center_horizontal"
        android:background="#4d0e0d0d"
        android:textSize="40dp"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Şifre.."
        android:ems="10"
        android:id="@+id/etSifreKayit"
        android:background="#4d0e0d0d"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kayıt Ol"
        android:id="@+id/btnKayitOl"
        android:layout_gravity="center_horizontal"
        android:background="#850bbbd2"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:textSize="40dp" />
</LinearLayout>